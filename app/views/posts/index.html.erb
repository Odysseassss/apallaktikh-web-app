<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1 style="text-align: center;">Posts</h1>

<div style="display: flex; justify-content: center; margin-bottom: 20px;">
  <%= form_with url: posts_path, method: :get, local: true, style: "display: flex; gap: 10px; align-items: center;" do |form| %>
    
    <%= form.text_field :search, placeholder: "Αναζήτηση Posts...", value: params[:search], 
        style: "padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px; width: 300px;" %>
    
    <%= form.submit "Αναζήτηση", 
        style: "background-color: #2596be; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; font-weight: bold;" %>
  <% end %>
</div>

<div style="text-align: center; margin-bottom: 30px;">
  <%= link_to "Δημιουργία Νέου Post", new_post_path, 
      style: "display: inline-block; background-color: #2596be; color: white; padding: 12px 24px; text-decoration: none; border-radius: 5px; font-weight: bold; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: background-color 0.3s;" %>
</div>

<div id="posts" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px; padding: 20px;">
  <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
</div>